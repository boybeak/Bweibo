<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <uk.co.senab.photoview.PhotoView
        android:id="@+id/preview_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:background="@color/colorPrimaryDark"
        />
    <ProgressBar
        android:id="@+id/preview_loading_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/std_size_4"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/std_size_16"
        android:layout_marginRight="@dimen/std_size_16"
        android:max="100"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_bar_horizontal"
        />
    <TextView
        android:id="@+id/preview_loading_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/preview_loading_progress_bar"
        />
</RelativeLayout>