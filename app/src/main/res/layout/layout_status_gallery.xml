<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/statusItemContainerStyle">
    <include
        android:id="@+id/status_user_part"
        layout="@layout/layout_status_user_part"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/status_text"
        style="@style/statusTextStyle"
        android:layout_below="@+id/status_user_part"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/status_image_gallery"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/status_text"
        />
    <!--<include
        android:id="@+id/status_image_grid_part"
        layout="@layout/layout_multi_image_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_text"
        style="@style/statusImageMarginStyle"
        >
    </include>-->
    <include
        android:id="@+id/status_control_part"
        layout="@layout/layout_status_control_part"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_image_gallery"
        style="@style/statusControlStyle"
        />
</RelativeLayout>