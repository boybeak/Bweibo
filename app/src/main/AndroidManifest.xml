<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beak.bweibo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.HelloActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.MainActivity" >
        </activity>
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".activity.PublishActivity"
            android:label="@string/title_activity_publish"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".activity.StatusDetailActivity"
            android:label="@string/title_activity_status_detail" >
        </activity>
        <activity
            android:name=".activity.common.ImageSelectActivity"
            android:label="@string/title_activity_image_select" >
        </activity>
        <activity
            android:name=".activity.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name=".activity.common.WebActivity"
            android:label="@string/title_activity_web" >
        </activity>
        <activity
            android:name=".activity.TopicActivity"
            android:label="@string/title_activity_topic" >
        </activity>
        <activity
            android:name=".activity.DraftActivity"
            android:label="@string/title_activity_draft" >
        </activity>
        <activity
            android:name=".activity.common.ImagePreviewActivity"
            android:label="@string/title_activity_image_preview" >
        </activity>
        <activity
            android:name=".activity.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
    </application>

</manifest>
